<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gabinete de Telecomunicaciones Definitivo</title>
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@400;700&family=Share+Tech+Mono&display=swap');

        :root {
            --cabinet-bg: #282c34;
            --device-bg: #e9ecef;
            --mikrotik-bg: #f5f5f5;
            --dark-chassis-bg: #343a40;
            --text-dark: #212529;
            --text-light: #f8f9fa;
            --mikrotik-blue: #2974b5;
            --olt-green: #27ae60;
            --odf-purple: #8e44ad;
            --efa-orange: #e67e22;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto Condensed', sans-serif;
            background: linear-gradient(135deg, #485563 0%, #29323c 100%);
            padding: 20px;
            min-height: 100vh;
        }

        .container {
            max-width: 1300px;
            margin: 0 auto;
            background: #f8f9fa;
            border-radius: 15px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
            padding: 30px;
        }

        h1 {
            text-align: center;
            color: var(--text-dark);
            margin-bottom: 30px;
            font-size: 2.5em;
        }

        .cabinet-container {
            display: flex;
            justify-content: center;
            gap: 30px;
            flex-wrap: wrap;
            align-items: flex-start;
        }

        .cabinet {
            background: var(--cabinet-bg);
            border: 2px solid #1a1a1a;
            border-radius: 10px;
            padding: 20px 45px;
            width: 520px;
            min-height: 1600px;
            /* Altura ajustada */
            position: relative;
            box-shadow: inset 0 0 15px rgba(0, 0, 0, 0.7);
        }

        .cabinet::before,
        .cabinet::after {
            content: '';
            position: absolute;
            top: 15px;
            bottom: 15px;
            width: 25px;
            background-image: repeating-linear-gradient(var(--cabinet-bg) 0px, var(--cabinet-bg) 10px, #444 10px, #444 22px, var(--cabinet-bg) 22px);
        }

        .cabinet::before {
            left: 10px;
        }

        .cabinet::after {
            right: 10px;
        }

        .device {
            background: var(--device-bg);
            margin: 12px 0;
            padding: 10px 15px;
            border-radius: 6px;
            border: 1px solid #999;
            position: relative;
            box-shadow: 0 1px 1px rgba(255, 255, 255, 0.2) inset, 0 2px 3px rgba(0, 0, 0, 0.4);
        }

        .device-header {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
            justify-content: space-between;
        }

        .device-title {
            color: var(--text-dark);
            font-weight: 700;
            font-size: 14px;
        }

        .ports-container {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
            margin-top: 5px;
            padding: 5px;
            border-radius: 4px;
        }

        .port-block {
            background: #212529;
            border-radius: 4px;
            padding: 6px;
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
            border: 1px solid #555;
        }

        .port {
            width: 15px;
            height: 15px;
            border-radius: 2px;
            cursor: pointer;
            transition: all 0.2s ease;
            box-shadow: inset 0 0 3px rgba(0, 0, 0, 0.5);
        }

        .port.ethernet {
            background-color: #f39c12;
        }

        .port.sfp-plus {
            background-color: #7d51a0;
            border: 1px solid #000;
        }

        .port.pon {
            background-color: #2c7be5;
        }

        .port.fiber-apc {
            background-color: #2ecc71;
        }

        .port.fiber-upc {
            background-color: #34bcec;
        }

        .port:hover {
            transform: scale(1.2);
        }

        .port.active {
            animation: port-blink 1s infinite;
            box-shadow: 0 0 8px currentColor, 0 0 12px currentColor, inset 0 0 4px rgba(255, 255, 255, 0.7);
        }

        @@keyframes port-blink {
            50% {
                opacity: 0.5;
            }
        }

        /* --- Estilos Específicos de Dispositivos --- */
        .mikrotik {
            background: var(--mikrotik-bg);
            border-left: 5px solid var(--mikrotik-blue);
            background-image: repeating-linear-gradient(45deg, transparent, transparent 10px, #e9ecef 10px, #e9ecef 12px);
        }

        .mikrotik .device-title {
            color: var(--mikrotik-blue);
        }

        .lcd-screen {
            background: #0a2a40;
            border: 2px solid #333;
            border-radius: 4px;
            color: #34bcec;
            font-family: 'Share Tech Mono', monospace;
            font-size: 10px;
            padding: 4px;
            text-shadow: 0 0 5px #34bcec;
            box-shadow: inset 0 0 8px rgba(0, 0, 0, 0.8);
        }

        .olt,
        .efa {
            background: linear-gradient(to bottom, var(--dark-chassis-bg) 0%, #495057 100%);
            border-left: 5px solid var(--olt-green);
        }

        .olt .device-title,
        .efa .device-title {
            color: var(--text-light);
        }

        .olt .row-label,
        .efa .row-label,
        .odf .row-label {
            color: #ced4da;
        }

        .efa {
            border-left-color: var(--efa-orange);
        }

        .odf {
            border-left: 5px solid var(--odf-purple);
            background: #3a3f44;
        }

        .odf .device-title {
            color: var(--text-light);
        }

        .led {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            animation: pulse 2s infinite ease-in-out;
            border: 1px solid rgba(0, 0, 0, 0.3);
        }

        .led.pwr {
            background: #27ae60;
            box-shadow: 0 0 5px #27ae60;
        }

        .led.status {
            background: #f1c40f;
            box-shadow: 0 0 5px #f1c40f;
        }

        @@keyframes pulse {

            0%,
            100% {
                opacity: 1;
            }

            50% {
                opacity: 0.4;
            }
        }

        .row-label {
            font-size: 10px;
            margin: 8px 0 4px 0;
            font-weight: 700;
            text-transform: uppercase;
        }

        .efa .display {
            background: #333;
            color: var(--efa-orange);
            font-family: 'Share Tech Mono', monospace;
            padding: 2px 6px;
            border-radius: 3px;
            font-size: 12px;
            box-shadow: inset 0 0 5px #000;
            text-shadow: 0 0 5px var(--efa-orange);
        }

        .port-divider {
            border-left: 2px solid #555;
            margin: 0 5px;
        }

        .controls {
            text-align: center;
            margin-bottom: 20px;
        }

        .btn {
            background: var(--mikrotik-blue);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin: 0 5px;
            transition: all 0.3s ease;
        }

        .btn:hover {
            background: #1c5a90;
            transform: translateY(-2px);
        }

        .info-panel {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            width: 320px;
            height: fit-content;
            border: 1px solid #dee2e6;
        }

        .device-info {
            background: white;
            padding: 12px;
            margin: 10px 0;
            border-radius: 5px;
        }

        .device-info h4 {
            color: var(--text-dark);
            font-size: 14px;
            margin-bottom: 5px;
        }

        .device-info p {
            font-size: 12px;
            color: #555;
            margin: 3px 0;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Gabinete de Telecomunicaciones Definitivo</h1>
        <div class="controls">
            <button class="btn" onclick="simulateTraffic()">Simular Tráfico</button>
            <button class="btn" onclick="resetPorts()">Resetear</button>
        </div>

        <div class="cabinet-container">
            <div class="cabinet">
                <!-- 1. MikroTik CCR1036-8G-2S+ -->
                <div class="device mikrotik">
                    <div class="device-header">
                        <div class="device-title">MikroTik CCR1036-8G-2S+</div>
                        <div class="lcd-screen">Core Router<br>CPU: 5% Load</div>
                    </div>
                    <div class="ports-container">
                        <div class="port-block" id="ccr1036-eth"></div>
                        <div class="port-divider"></div>
                        <div class="port-block">
                            <div class="port sfp-plus" onclick="togglePort(this)" data-port="ccr1-sfp1"></div>
                            <div class="port sfp-plus" onclick="togglePort(this)" data-port="ccr1-sfp2"></div>
                        </div>
                    </div>
                </div>

                <!-- 2. OLT -->
                <div class="device olt">
                    <div class="device-header">
                        <div class="device-title">FiberHome AN6000-17 OLT</div>
                        <div><span class="led pwr"></span> <span class="led status"></span></div>
                    </div>
                    <div class="row-label">Uplink / Management</div>
                    <div class="ports-container">
                        <div class="port-block" style="background: #111;">
                            <div class="port sfp-plus" onclick="togglePort(this)" data-port="olt-up1"></div>
                            <div class="port sfp-plus" onclick="togglePort(this)" data-port="olt-up2"></div>
                            <div class="port sfp-plus" onclick="togglePort(this)" data-port="olt-up3"></div>
                            <div class="port sfp-plus" onclick="togglePort(this)" data-port="olt-up4"></div>
                        </div>
                        <div class="port-block" style="background: #111;">
                            <div class="port ethernet" onclick="togglePort(this)" data-port="olt-mgmt"></div>
                        </div>
                    </div>
                    <div class="row-label">GPON Service Cards (Ports 1-48)</div>
                    <div class="ports-container" id="olt-pon-ports"></div>
                </div>

                <!-- 3. MikroTik CCR2116-12G-4S+ -->
                <div class="device mikrotik">
                    <div class="device-header">
                        <div class="device-title">MikroTik CCR2116-12G-4S+</div>
                        <div class="lcd-screen">Distro Router<br>CPU: 8% Load</div>
                    </div>
                    <div class="ports-container">
                        <div class="port-block" id="ccr2116-eth"></div>
                        <div class="port-divider"></div>
                        <div class="port-block">
                            <div class="port sfp-plus" onclick="togglePort(this)" data-port="ccr2-sfp1"></div>
                            <div class="port sfp-plus" onclick="togglePort(this)" data-port="ccr2-sfp2"></div>
                            <div class="port sfp-plus" onclick="togglePort(this)" data-port="ccr2-sfp3"></div>
                            <div class="port sfp-plus" onclick="togglePort(this)" data-port="ccr2-sfp4"></div>
                        </div>
                    </div>
                </div>

                <!-- 4. ODF 96 Puertos -->
                <div class="device odf">
                    <div class="device-header">
                        <div class="device-title">ODF 96 Puertos de Alta Densidad</div>
                    </div>
                    <div class="row-label">Puertos 1 - 24</div>
                    <div class="ports-container" id="odf96-row1"></div>
                    <div class="row-label">Puertos 25 - 48</div>
                    <div class="ports-container" id="odf96-row2"></div>
                    <div class="row-label">Puertos 49 - 72</div>
                    <div class="ports-container" id="odf96-row3"></div>
                    <div class="row-label">Puertos 73 - 96</div>
                    <div class="ports-container" id="odf96-row4"></div>
                </div>

                <!-- 5. ODF 48 Puertos -->
                <div class="device odf">
                    <div class="device-header">
                        <div class="device-title">ODF 48 Puertos (Borneras)</div>
                    </div>
                    <div class="row-label">Puertos 1 - 24</div>
                    <div class="ports-container" id="odf48-row1"></div>
                    <div class="row-label">Puertos 25 - 48</div>
                    <div class="ports-container" id="odf48-row2"></div>
                </div>

                <!-- 6. EFA (EDFA) -->
                <div class="device efa">
                    <div class="device-header">
                        <div class="device-title">EDFA 32-Port CATV Amplifier</div>
                        <div class="display">+18.5 dBm</div>
                    </div>
                    <div class="row-label">Input</div>
                    <div class="ports-container" style="justify-content: center;">
                        <div class="port-block">
                            <div class="port fiber-apc" onclick="togglePort(this)" data-port="efa-in"></div>
                        </div>
                    </div>
                    <div class="row-label">Outputs 1 - 16</div>
                    <div class="ports-container" id="efa-row1"></div>
                    <div class="row-label">Outputs 17 - 32</div>
                    <div class="ports-container" id="efa-row2"></div>
                </div>
            </div>

            <!-- Panel de Información -->
            <div class="info-panel">
                <h3>📊 Información del Gabinete</h3>
                <div class="device-info">
                    <h4>1. MikroTik CCR1036</h4>
                    <p>Router Core de la red. Gestiona el tráfico principal y las rutas BGP.</p>
                </div>
                <div class="device-info">
                    <h4>2. OLT GPON</h4>
                    <p>Terminal de Línea Óptica. Provee servicio de fibra óptica a los clientes finales (FTTH).</p>
                </div>
                <div class="device-info">
                    <h4>3. MikroTik CCR2116</h4>
                    <p>Router de Distribución. Segmenta la red y gestiona el tráfico de agregación.</p>
                </div>
                <div class="device-info">
                    <h4>4. ODF 96 Puertos</h4>
                    <p>Panel de parcheo de fibra principal para la interconexión con la red externa.</p>
                </div>
                <div class="device-info">
                    <h4>5. ODF 48 Puertos</h4>
                    <p>Panel de parcheo secundario, usado para conexiones internas o borneras locales.</p>
                </div>
                <div class="device-info">
                    <h4>6. Amplificador EDFA</h4>
                    <p>Amplifica la señal óptica de TV por Cable para su distribución masiva.</p>
                </div>
                <div style="margin-top: 20px; padding: 12px; background: #e9ecef; border-radius: 5px;">
                    <h4>Leyenda de Puertos</h4>
                    <p style="color: #f39c12;">● Ethernet (1G)</p>
                    <p style="color: #7d51a0;">● Fibra SFP+ (10G Uplink)</p>
                    <p style="color: #2c7be5;">● Fibra PON (Cliente)</p>
                    <p style="color: #34bcec;">● Fibra UPC (Patch ODF)</p>
                    <p style="color: #2ecc71;">● Fibra APC (CATV)</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        function togglePort(port) { port.classList.toggle('active'); }
        function simulateTraffic() {
            resetPorts();
            document.querySelectorAll('.port').forEach(p => {
                if (Math.random() > 0.7) setTimeout(() => p.classList.add('active'), Math.random() * 1000);
            });
        }
        function resetPorts() {
            document.querySelectorAll('.port.active').forEach(p => p.classList.remove('active'));
        }

        document.addEventListener('DOMContentLoaded', function () {
            const createPorts = (selector, count, portClass, prefix, start = 1) => {
                const container = document.querySelector(selector);
                if (!container) return;
                let frag = document.createDocumentFragment();
                for (let i = 0; i < count; i++) {
                    const port = document.createElement('div');
                    port.className = `port ${portClass}`;
                    port.onclick = () => togglePort(port);
                    port.dataset.port = `${prefix}-${start + i}`;
                    frag.appendChild(port);
                }
                container.appendChild(frag);
            };

            // --- Generate Ports for All Devices ---
            createPorts('#ccr1036-eth', 8, 'ethernet', 'ccr1-eth');
            createPorts('#ccr2116-eth', 12, 'ethernet', 'ccr2-eth');

            const oltPonContainer = document.getElementById('olt-pon-ports');
            for (let i = 0; i < 3; i++) {
                const block = document.createElement('div');
                block.className = 'port-block';
                for (let j = 1; j <= 16; j++) {
                    const port = document.createElement('div');
                    port.className = 'port pon';
                    port.onclick = () => togglePort(port);
                    port.dataset.port = `pon-${i * 16 + j}`;
                    block.appendChild(port);
                }
                oltPonContainer.appendChild(block);
            }

            createPorts('#odf96-row1', 24, 'fiber-upc', 'odf96', 1);
            createPorts('#odf96-row2', 24, 'fiber-upc', 'odf96', 25);
            createPorts('#odf96-row3', 24, 'fiber-upc', 'odf96', 49);
            createPorts('#odf96-row4', 24, 'fiber-upc', 'odf96', 73);

            createPorts('#odf48-row1', 24, 'fiber-upc', 'odf48', 1);
            createPorts('#odf48-row2', 24, 'fiber-upc', 'odf48', 25);

            createPorts('#efa-row1', 16, 'fiber-apc', 'efa-out', 1);
            createPorts('#efa-row2', 16, 'fiber-apc', 'efa-out', 17);

            simulateTraffic();
        });
    </script>
</body>

</html>